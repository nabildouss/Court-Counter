<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/score_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/teamA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="56sp" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:onClick="scoreA"
                    android:text="@string/goal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"

                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:onClick="foulA"
                        android:text="@string/foul" />

                    <TextView
                        android:id="@+id/team_a_foul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"

                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:onClick="yellowA"
                        android:text="@string/yellowC" />

                    <TextView
                        android:id="@+id/team_a_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"

                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:onClick="redA"
                        android:text="@string/redC" />

                    <TextView
                        android:id="@+id/team_a_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/teamB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="56sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:onClick="scoreB"
                    android:text="@string/goal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/team_b_foul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_marginRight="24dp"
                        android:layout_marginTop="8dp"
                        android:onClick="foulB"
                        android:text="@string/foul" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/team_b_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="24dp"
                        android:layout_marginTop="8dp"

                        android:onClick="yellowB"
                        android:text="@string/yellowC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/team_b_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"

                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="24dp"
                        android:layout_marginTop="8dp"
                        android:onClick="redB"
                        android:text="@string/redC" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_linear_layout"
            android:layout_margin="32dp"
            android:onClick="resetScores"
            android:text="@string/reset" />
    </RelativeLayout>
</ScrollView>